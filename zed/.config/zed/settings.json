{
  "git_panel": {
    "tree_view": true
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    },
    "font_size": 15.0
  },
  "icon_theme": "Zed (Default)",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "snippet_sort_order": "top",
  "relative_line_numbers": "disabled",
  "agent_ui_font_size": 15.0,
  "buffer_font_weight": 500.0,
  "features": {
    "edit_prediction_provider": "zed",
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
    "favorite_models": [],
    "model_parameters": [],
  },
  "context_servers": {},
  "enable_language_server": true,
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": false,
    "show_project_items": false,
    "show_onboarding_banner": false,
    "show_sign_in": false,
    "show_user_menu": false,
    "show_user_picture": false,
    "show_branch_name": false,
  },
  "ui_font_weight": 500.0,
  "ui_font_family": ".ZedMono",
  "buffer_font_family": "JetBrainsMono Nerd Font Propo",
  "text_rendering_mode": "subpixel",
  "ui_font_size": 17.0,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "dark",
    "light": "Noctalia Light",
    "dark": "Vercel Dark",
  },
  "vim_mode": false,
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "tabs": { "file_icons": true },

  "languages": {
    "Python": {
      "show_edit_predictions": true,
      // "language_servers": ["pylsp"],

      "language_servers": ["ty", "basedpyright", "ruff"],
      "format_on_save": "on",
      "show_completions_on_input": true,
    },
  },

  "ui_font_features": {
    "liga": true,
    "clig": true,
    "calt": true,
    "dlig": false,
    "kern": true,
    "ss01": false,
    "zero": true,
  },

  // "lsp": {
  //   "basedpyright": {
  //     "settings": {
  //       "basedpyright": {
  //         "analysis": {
  //           "typeCheckingMode": "standard",
  //           "autoImportCompletions": false,
  //           "indexing": true,
  //           "diagnosticMode": "openFilesOnly",
  //           "useLibraryCodeForTypes": true,
  //         },
  //       },
  //     },
  //   },
  // },
  "show_completion_documentation": true,

  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright": {
          "analysis": {
            "typeCheckingMode": "standard",
            "autoImportCompletions": false,
            "indexing": true,
            "diagnosticMode": "workspace",
            "useLibraryCodeForTypes": true,
            "completeFunctionParens": true,
            "includeParamsInAttributeCompletions": true,
          },
        },
      },
    },
  },
}
